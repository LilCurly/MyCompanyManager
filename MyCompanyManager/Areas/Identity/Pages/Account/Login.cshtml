@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="hero">
    <div class="d-flex flex-column justify-content-center h-100 offset-lg-3 col-lg-6 offset-sm-0 col-sm-12">
        <div class="bg-dark-opacity px-4 pb-4 pt-2">
            <h3 class="text-white">@ViewData["Title"]</h3>
            <div class="w-50 mx-auto pt-5">
                <form method="post">
                    <h4 class="text-light">Utilisez le compte qui vous a été fourni pour vous connecter.</h4>
                    <hr class="bg-white" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="text-light" asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-light" asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="mt-3 nav-link btn-connect-white mx-auto">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
